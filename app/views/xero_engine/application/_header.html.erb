<div class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to site_name, xero_engine.root_path, class: 'navbar-brand' %>
    </div>

    <!-- Primary navigation -->
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <%= render partial: 'xero_organisation_selector' %>
      <% else %>
        <%= render partial: 'header_page_links' %>
      <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= render "devise_links" %>
      </ul>
    </div><!-- /.nav-collapse -->
  </div><!-- /.container -->

  <% if !@hide_secondary_navbar && user_signed_in? && current_organisation? && current_organisation.setup_completed? %>
  <!-- Secondary navigation -->
  <div class="container secondary-navbar">
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <%= render partial: 'header_page_links' %>
      </ul>
    </div><!-- /.nav-collapse -->
  </div><!-- /.secondary-navbar -->
  <% end %>
</div><!-- /navigation header -->
