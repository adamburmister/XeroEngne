<div id="flash">
<%
flash_namespace_mapping = {
  'notice' => 'warning',
  'alert'  => 'danger',
  'error'  => 'danger'
}
flash.each do |key, value|
  next if key == 'timedout'
-%>
  <div class="alert alert-dismissible alert-<%= flash_namespace_mapping[key] || key %>" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= (value || '').html_safe %>
  </div>
<% end -%>
</div>
